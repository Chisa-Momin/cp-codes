//{ Driver Code Starts
#include<bits/stdc++.h> 
using namespace std; 

// } Driver Code Ends
class Solution
{
public:
    vector<int> candyStore(int candies[], int N, int K)
    {
        vector <int> ans;
        sort(candies,candies+N);
        int min_amount=0,max_amount=0;
        int i=0,j=N-1;
        while(i<=j){
            min_amount+=candies[i];
            i++;
            j-=K;
        }
        i=N-1,j=0;
        while(i>=j){
            max_amount+=candies[i];
            i--;
            j+=K;
        }
        ans.push_back(min_amount);
        ans.push_back(max_amount); 
        return ans;
    }
};

